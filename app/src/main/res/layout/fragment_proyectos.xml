<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/status_bar_height"
        android:id="@+id/contProyectos">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:columnCount="2"
            android:rowCount="2"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/proyecto1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="175dp"
                android:layout_height="175dp"
                card_view:cardCornerRadius="0dp"
                android:layout_gravity="start|top"
                card_view:cardElevation="2dp">

                <TextView
                    android:id="@+id/info_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hola Mundo, es mi primer proyecto"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/proyecto2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="175dp"
                android:layout_height="175dp"
                card_view:cardCornerRadius="0dp"
                android:layout_gravity="end|top"
                card_view:cardElevation="2dp">

                <TextView
                    android:id="@+id/info_text2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hola Mundo, es mi segundo proyecto"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/proyecto3"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="175dp"
                android:layout_height="175dp"
                card_view:cardCornerRadius="0dp"
                android:layout_gravity="start|top"
                card_view:cardElevation="2dp">

                <TextView
                    android:id="@+id/info_text3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hola Mundo, es mi tercer proyecto"/>

            </android.support.v7.widget.CardView>


        </GridLayout>

    </FrameLayout>



</LinearLayout>
